<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentosNutriologo.PlanDirario"
    android:background="@color/grey"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_vertical"
            android:background="@color/colorPrimaryDark"
            android:padding="16dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/IMGAtras"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="10dp"
                android:src="@drawable/ic_arrow_back_24dp" />

            <androidx.legacy.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/PlanDiario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="@string/TXTPlanDiario"
                android:textSize="20sp" />

            <androidx.legacy.widget.Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/SharePlan"
                android:layout_width="10dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/ic_action_share" />
        </LinearLayout>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:orientation="vertical">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="25dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="25dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:background="@drawable/fondo_gradiente_cardview_cherry"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Nutriologo"
                                    android:gravity="center"
                                    android:textSize="27dp"
                                    android:textStyle="bold"
                                    android:fontFamily="@font/proximanovaregular"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/white"/>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/FotoNutriologo"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:civ_border_color="@color/blue"
                                    app:civ_border_width="5dp"
                                    android:src="@drawable/lion"/>

                                <TextView
                                    android:id="@+id/NombresNutriologo"
                                    android:layout_marginTop="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:textSize="25dp"
                                    android:textColor="@color/white"
                                    android:fontFamily="@font/proximanovaregular"
                                    android:text="NombreNutriologo"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="20dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="18dp"
                                        android:fontFamily="@font/proximanovaregular"
                                        android:text="Telefono"/>

                                    <TextView
                                        android:id="@+id/TelefonoNutriologo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:textSize="18dp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/proximanovaregular"
                                        android:text="TelefonoNutriologo"/>


                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/white"
                                        android:textSize="18dp"
                                        android:fontFamily="@font/proximanovaregular"
                                        android:text="Email"/>

                                    <TextView
                                        android:id="@+id/CorreoNutriologo"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:gravity="right"
                                        android:textSize="18dp"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/proximanovaregular"
                                        android:text="CorreoNutriologo"/>


                                </LinearLayout>




                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.cardview.widget.CardView>



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardElevation="25dp"
                            app:cardUseCompatPadding="true"
                            app:cardCornerRadius="25dp">

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="20dp"
                                android:background="@drawable/fondo_gradiente_cardview_cherry"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/progreso_nutricional"
                                    android:gravity="center"
                                    android:textSize="25dp"
                                    android:fontFamily="@font/lato_blackitalic"
                                    android:layout_marginBottom="10dp"
                                    android:textColor="@color/white">

                                </TextView>


                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/AlimentosDiarios"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                            </androidx.appcompat.widget.LinearLayoutCompat>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="25dp"
                    app:cardUseCompatPadding="true"
                    app:cardCornerRadius="25dp">>
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/black"
                            android:fontFamily="@font/proximanovaregular"
                            android:text="Comentarios de tu Nutriologo: "/>

                        <EditText
                            android:id="@+id/ComentarioNutriologo"
                            android:layout_width="fill_parent"
                            android:layout_height="100dp"
                            android:layout_margin="4dp"
                            android:background="@drawable/border_table"
                            android:gravity="start"
                            android:textColor="@color/black" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.cardview.widget.CardView>



                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/GuardarComentarioDiario"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:layout_gravity="end"
                    android:background="@drawable/rounder_corners"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:text="@string/BtnGuardarComentario"
                    android:textSize="12sp" />

                <Button
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounder_corners"
                    android:padding="10dp"
                    android:textColor="@color/white"
                    android:id="@+id/VistoBueno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/BtnVistoBueno" />

            </LinearLayout>
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>

</ScrollView>