<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentosNutriologo.PlanDirario"
    android:background="@drawable/fondo_gradiente"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:background="@color/colorPrimaryDark"
        android:padding="16dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/IMGAtras"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_back_24dp" />

        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/PlanDiario"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="@string/TXTPlanDiario"
            android:textSize="20sp" />
        <androidx.legacy.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/AlimentosDiarios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </LinearLayout>
        </ScrollView>

        <EditText
            android:id="@+id/ComentarioNutriologo"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_margin="4dp"
            android:background="@color/white"
            android:gravity="start"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/GuardarComentarioDiario"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_gravity="end"
            android:text="@string/BtnGuardarComentario"
            android:textSize="8sp" />

        <Button
            android:id="@+id/VistoBueno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/BtnVistoBueno" />

    </LinearLayout>

</LinearLayout>