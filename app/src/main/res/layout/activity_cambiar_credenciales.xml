<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/fondo_gradiente"
    tools:context=".ActualizarPerfil">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="5dp"

            android:elevation="5dp"
            android:orientation="vertical"
            app:cardCornerRadius="25dp">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="15dp"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/TXTActualizarCredenciales"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

                <!-- Contrase単a Antigua-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/TXTPasswordAntiguoUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/TXTPasswordAntiguoUsuario"
                        android:inputType="textPassword"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Contrase単a Nueva-->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <EditText
                        android:id="@+id/TXTPasswordNuevoUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/TXTPasswordNuevoUsuario"
                        android:inputType="textPassword"/>

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Pregunta Uno -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/TXTPreguntaUno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/TXTPreguntaUno"
                        android:inputType="textCapWords|textAutoCorrect" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Pregunta Dos -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/TXTPreguntaDos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ems="10"
                        android:hint="@string/TXTPreguntaDos"
                        android:inputType="textCapWords|textAutoCorrect" />

                </com.google.android.material.textfield.TextInputLayout>


                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/BtnActualizarContrase単aUsuarioBD"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="#3b5998"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:text="@string/BtnActualizarContrase単aUsuarioBD" />

                <Button
                    android:layout_marginTop="10dp"
                    android:id="@+id/BtnActualizarPreguntasUsuarioBD"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="#3b5998"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp"
                    android:text="@string/BtnActualizarPreguntasUsuarioBD" />


            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>