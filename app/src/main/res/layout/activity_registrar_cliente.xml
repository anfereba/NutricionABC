<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrarClienteConSQLite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/AgregarFotoCliente"
                android:layout_width="200dp"
                android:layout_height="200dp"
                app:srcCompat="@drawable/imagen_ico"
                android:onClick="EscogerImagenDeGaleria"/>

            <EditText
                android:id="@+id/TXTNombreUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/TXTNombreUsuario"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/TXTApellidoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/TXTApellidoUsuario"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/TXTFechaNacimientoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/TXTFechaNacimientoUsuario"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/TXTCorreoUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/TXTCorreoUsuario"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/TXTPasswordUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/TXTPasswordUsuario"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/TXTFechaCreacionUsuario"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/TXTFechaCreacionUsuario"
                android:inputType="textPersonName" />

            <Button
                android:id="@+id/BtnRegistrarClienteBD"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/BtnRegistrarClienteBD" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>